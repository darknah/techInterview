{
    "compilerOptions": {
        "moduleResolution": "node",
        "skipLibCheck": true,
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
      },
      "include": ["src/**/*", "src/types/**/*"],
      "exclude": ["node_modules"]
  }
  